{
  "name": "Vocabulary Picker",
  "description" : "Pick challenging and elegant vocabulary while reading",
  "version": "1.0",
  "browser_action": {
    "default_popup": "UI-Edit.html",
    "default_title": "Vocabulary Picker",
    "default_icon": "images/main-favicon.png"
  },
  "manifest_version": 2,
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "MacCtrl+Shift+F"
      },
      "description": "Opens editing UI"
    },

    "pick_word":{
      "suggested_key":{
        "default": "Ctrl+Shift+Q",
        "mac": "MacCtrl+Shift+Q"
      },
      "description": "Select word in current page"
    }


  },
  "permissions": [
    "<all_urls>",
    "tts",
    "tabs",
    "storage",
    "downloads"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "all_frames": true,
      "js": [
        "content_script.js"
      ]
    }
  ]

}
